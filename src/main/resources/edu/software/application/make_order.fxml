<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <TextField fx:id="description">
        <VBox.margin>
          <Insets left="10.0" right="10.0" top="10.0"/>
        </VBox.margin>
    </TextField>
    <HBox fx:id="box" prefHeight="50.0" prefWidth="100.0">
        <VBox.margin>
            <Insets top="10.0"/>
        </VBox.margin>
        <padding>
            <Insets bottom="10.0" top="5.0"/>
        </padding>
        <CheckBox fx:id="hair" mnemonicParsing="false" text="Hair" textAlignment="CENTER">
            <HBox.margin>
                <Insets left="20.0" top="10.0"/>
            </HBox.margin>
        </CheckBox>
        <CheckBox fx:id="beard" mnemonicParsing="false" text="Beard" textAlignment="CENTER">
            <HBox.margin>
                <Insets left="20.0" top="10.0"/>
            </HBox.margin>
        </CheckBox>
        <CheckBox fx:id="hair_care" mnemonicParsing="false" text="Hair Care" textAlignment="CENTER">
            <HBox.margin>
                <Insets left="20.0" top="10.0"/>
            </HBox.margin>
        </CheckBox>
    </HBox>
    <Button fx:id="confirm" mnemonicParsing="false" text="Confirm">
        <VBox.margin>
          <Insets left="10.0"/>
        </VBox.margin>
    </Button>
</VBox>
